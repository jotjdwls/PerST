<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:layout_marginBottom="60dp"
    tools:context=".Calculator">

    <TextView
        android:id="@+id/textView"
        android:layout_width="60dp"
        android:layout_height="255dp"
        android:layout_margin="5dp"
        android:gravity="right|bottom"
        android:padding="10dp"
        android:text="0"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30dp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/rpth"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="("
            android:textSize="22dp" />

        <Button
            android:id="@+id/lpth"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text=")"
            android:textSize="22dp" />

        <Button
            android:id="@+id/del"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="DEL"
            android:textSize="22dp" />

        <Button
            android:id="@+id/ac"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="3.5"
            android:text="AC"
            android:textSize="22dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/seven"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="7"
            android:textSize="22dp" />

        <Button
            android:id="@+id/eight"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="8"
            android:textSize="22dp" />

        <Button
            android:id="@+id/nine"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="9"
            android:textSize="22dp" />

        <Button
            android:id="@+id/pi"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="pi"
            android:textSize="22dp" />

        <Button
            android:id="@+id/square"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="x^2"
            android:textSize="22dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/four"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="4"
            android:textSize="22dp" />

        <Button
            android:id="@+id/five"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="5"
            android:textSize="22dp" />

        <Button
            android:id="@+id/six"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="6"
            android:textSize="22dp" />

        <Button
            android:id="@+id/mult"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="x"
            android:textSize="22dp" />

        <Button
            android:id="@+id/div"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="รท"
            android:textSize="22dp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/one"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="1"
            android:textSize="22dp" />

        <Button
            android:id="@+id/two"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="2"
            android:textSize="22dp" />

        <Button
            android:id="@+id/three"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="3"
            android:textSize="22dp" />

        <Button
            android:id="@+id/plus"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="+"
            android:textSize="22dp" />

        <Button
            android:id="@+id/minus"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="-"
            android:textSize="22dp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/factorial"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="!"
            android:textSize="22dp" />

        <Button
            android:id="@+id/zero"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="0"
            android:textSize="22dp" />

        <Button
            android:id="@+id/dot"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="."
            android:textSize="22dp" />

        <Button
            android:id="@+id/fin"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="3.5"
            android:text="="
            android:textSize="22dp" />
    </TableRow>


</TableLayout>